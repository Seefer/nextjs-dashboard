{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf"
  },
  "linter": {
    "enabled": true,
    "domains": {
      "next": "recommended",
      "test": "recommended"
    },
    "rules": {
      "correctness": "warn",
      "security": "warn",
      "performance": "warn"
    }
  },
  "assist": {
    "enabled": true
  }
}
